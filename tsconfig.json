{
    "compilerOptions": {
        "target": "es2016",
        "module": "es6",
        "moduleResolution": "node",
        "baseUrl": "src",
        "strictNullChecks": true,
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": true,
        "declaration": true,
        "strict": true,
        "typeRoots": [
            "../node_modules/@types",
            "./types"
        ],
        "esModuleInterop": true,
        "pretty": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "dist",
        "tests",
        "node_modules",
    ]
}