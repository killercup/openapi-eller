{
    "compilerOptions": {
        "target": "es2016",
        "module": "es6",
        "moduleResolution": "node",
        "baseUrl": "src",
        "strictNullChecks": true,
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": true,
        "declaration": true,
        "outDir": "build",
        "strict": true,
        "types": [
            "node"
        ],
        "typeRoots": [
            "../node_modules/@types",
            "./types"
        ]
        // "noUnusedLocals": true,
    },
    "include": [
        "src/**/*",
    ],
    "exclude": [
        "dist",
        "tests",
        "node_modules",
    ]
}